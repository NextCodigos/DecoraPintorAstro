<style>
    .contact {
        background-color: var(--white);
        padding: 120px 20px;
    }

    .contact-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .contact-header h2 {
        font-size: clamp(2rem, 5vw, 3rem);
        margin-bottom: 20px;
    }

    .contact-header p {
        font-size: 1.1rem;
        color: var(--text-light);
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        margin: 60px 0;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        padding: 30px;
        background: var(--bg-offset);
        border-radius: 12px;
        transition: var(--transition);
    }

    .info-item:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-md);
    }

    .info-icon {
        width: 50px;
        height: 50px;
        background: var(--white);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary);
        box-shadow: var(--shadow-sm);
    }

    .info-item h4 {
        font-size: 0.8rem;
        color: var(--text-light);
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 4px;
    }

    .info-item p {
        font-weight: 600;
        font-size: 1rem;
    }

    .contact-actions {
        margin-top: 40px;
    }

    .btn-whatsapp {
        background-color: #25d366;
        color: white;
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 18px 40px;
        font-size: 1.1rem;
        border-radius: 50px;
        box-shadow: 0 4px 15px rgba(37, 211, 102, 0.3);
    }

    .btn-whatsapp:hover {
        background-color: #128c7e;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(37, 211, 102, 0.4);
        color: white;
    }

    .mt-1 {
        margin-top: 15px;
        font-size: 0.9rem;
        color: var(--text-light);
    }

    @media (max-width: 640px) {
        .contact {
            padding: 80px 20px;
        }
        .contact-info-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
