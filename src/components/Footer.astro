<style>
    .footer {
        background-color: #1a1a1a; /* Explicit dark color */
        color: #ffffff; /* Explicitly white text */
        padding: 100px 0 40px;
        transition: background-color 0.3s ease;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    [data-theme="dark"] .footer {
        background-color: #080808; /* Even darker in dark mode */
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr;
        gap: 80px;
        margin-bottom: 80px;
        padding: 0 20px;
    }

    .footer-brand .logo-text {
        color: #ffffff;
        font-size: 1.6rem;
        font-weight: 700;
        letter-spacing: 2px;
    }

    .footer-description {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.95rem;
        line-height: 1.8;
        max-width: 350px;
        margin-top: 20px;
    }

    .footer h4 {
        color: #ffffff;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 30px;
    }

    .footer ul {
        list-style: none;
        padding: 0;
    }

    .footer ul li {
        margin-bottom: 15px;
        font-size: 0.95rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .footer a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: var(--transition);
    }

    .footer a:hover {
        color: #c5a059; /* Brand primary */
    }

    .social-links {
        display: flex;
        gap: 15px;
    }

    .social-links a {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: var(--transition);
        color: #ffffff;
    }

    .social-links a:hover {
        background: #c5a059;
        color: #ffffff;
        transform: translateY(-3px);
    }

    .footer-bottom {
        padding: 40px 20px 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .footer-legal {
        display: flex;
        gap: 30px;
    }

    .footer-legal a {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .copyright {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.4);
    }

    .mt-2 {
        margin-top: 30px;
    }

    @media (max-width: 992px) {
        .footer-grid {
            grid-template-columns: 1fr 1fr;
            gap: 60px;
        }
    }

    @media (max-width: 640px) {
        .footer {
            padding-top: 60px;
        }
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 40px;
        }
        .footer-bottom {
            flex-direction: column;
            text-align: center;
        }
        .footer-legal {
            justify-content: center;
            width: 100%;
        }
    }
</style>
