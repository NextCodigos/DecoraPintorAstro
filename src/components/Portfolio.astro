---
const projects = [
    {
        title: "Acabados Artísticos",
        category: "Pintura Decorativa",
        image: "/images/trabajo1.jpg",
    },
    {
        title: "Diseño Geométrico",
        category: "Paredes Creativas",
        image: "/images/trabajo2.jpg",
    },
    {
        title: "Restauración de Puertas",
        category: "Carpintería y Pintura",
        image: "/images/trabajo3.jpg",
    },
    {
        title: "Texturas Especiales",
        category: "Interiorismo",
        image: "/images/trabajo4.jpg",
    },
    {
        title: "Dormitorios de Diseño",
        category: "Reformas",
        image: "/images/trabajo5.jpg",
    },
];
---

<section class="portfolio" id="proyectos">
    <div class="section-header text-center mb-3">
        <p class="subtitle">Portafolio</p>
        <h2>Nuestros Proyectos</h2>
    </div>

    <div class="portfolio-grid">
        {
            projects.map((project) => (
                <div class="portfolio-item">
                    <div class="portfolio-img-wrapper">
                        <img
                            src={project.image}
                            alt={project.title}
                            loading="lazy"
                        />
                        <div class="portfolio-overlay">
                            <p>{project.category}</p>
                            <h3>{project.title}</h3>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</section>

<style>
    .section-header .subtitle {
        color: var(--primary);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .section-header h2 {
        font-size: 2.5rem;
    }

    .portfolio-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
    }

    .portfolio-item {
        position: relative;
        border-radius: 8px;
        overflow: hidden;
        aspect-ratio: 4/3;
    }

    .portfolio-img-wrapper {
        height: 100%;
        width: 100%;
    }

    .portfolio-img-wrapper img {
        height: 100%;
        width: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .portfolio-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 30px;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
        color: white;
        transform: translateY(20px);
        opacity: 0;
        transition: var(--transition);
    }

    .portfolio-item:hover img {
        transform: scale(1.1);
    }

    .portfolio-item:hover .portfolio-overlay {
        transform: translateY(0);
        opacity: 1;
    }

    .portfolio-overlay p {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--primary);
        margin-bottom: 5px;
    }

    .portfolio-overlay h3 {
        color: white;
        font-size: 1.5rem;
    }
</style>
